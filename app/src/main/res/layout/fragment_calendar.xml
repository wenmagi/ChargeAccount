<?xml version="1.0" encoding="utf-8"?>
<com.wen.magi.baseframe.views.observablescrolled.views.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_theme_color">

            <LinearLayout
                android:id="@+id/ll_left_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_title_bar_height"
                android:layout_alignParentLeft="true"
                android:layout_gravity="left|center_vertical"
                android:descendantFocusability="blocksDescendants"
                android:orientation="horizontal"
                android:paddingRight="@dimen/common_margin_left_right">

                <ImageView
                    android:id="@+id/icon_back_today"
                    android:layout_width="@dimen/common_tv_height"
                    android:layout_height="@dimen/common_tv_height"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_today" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/center_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_title_bar_height"
                android:layout_centerInParent="true"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="11"
                    android:singleLine="true"
                    android:text="1111"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tv_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxEms="11"
                    android:singleLine="true"
                    android:text="1111"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_minimal" />
            </RelativeLayout>
            <!-- right button -->
            <LinearLayout
                android:id="@+id/ll_right_content"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_tv_height"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_tv_height"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/common_margin_left_right"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_sub_title" />

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_tv_height"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="center"
                    android:paddingRight="@dimen/common_margin_left_right"
                    android:scaleType="centerInside"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_week_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_layout">

            <GridView
                android:id="@+id/weekday_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="7"
                android:stretchMode="columnWidth" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_week_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_week_name"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_month_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_week_calendar"
            android:orientation="vertical" />

        <com.wen.magi.baseframe.views.fortest.MoneyScaleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_month_calendar"
            android:visibility="gone" />

        <com.wen.magi.baseframe.views.fortest.ScaleMoneyView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_month_calendar"
            android:visibility="gone" />
    </RelativeLayout>
</com.wen.magi.baseframe.views.observablescrolled.views.ObservableScrollView>