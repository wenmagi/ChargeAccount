            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignTop="@id/account_kb_7"
            android:background="@color/skin_color_numkeyboard_divider"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/account_kb_7"
            android:background="@color/skin_color_numkeyboard_divider"/>

