        <ImageView
            android:id="@+id/account_kb_dot"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_below="@id/account_kb_1"
            android:background="@drawable/skin_bg_view_selector"
            android:gravity="center"
            android:scaleType="centerInside"
            app:layout_heightPercent="25.0%"
            app:layout_widthPercent="25.0%"
            app:srcCompat="@drawable/skin_bg_keyboard_dot"/>

        <ImageView
            android:id="@+id/account_kb_delete"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_alignTop="@id/account_kb_dot"
            android:layout_toRightOf="@id/account_kb_0"
            android:background="@drawable/skin_bg_view_selector"
            android:gravity="center"
            android:scaleType="centerInside"
            android:textSize="22.0dip"
            app:imageColor="@color/skin_color_text_primary"
            app:layout_heightPercent="25.0%"
