            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_below="@id/account_kb_4"
            android:background="@drawable/skin_bg_view_selector"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/skin_color_text_primary"
            android:textSize="22.0dip"
            app:layout_heightPercent="25.0%"
            app:layout_widthPercent="25.0%"/>

        <TextView
            android:id="@+id/account_kb_2"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_alignTop="@id/account_kb_1"
            android:layout_toRightOf="@id/account_kb_1"
            android:background="@drawable/skin_bg_view_selector"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/skin_color_text_primary"
            android:textSize="22.0dip"
