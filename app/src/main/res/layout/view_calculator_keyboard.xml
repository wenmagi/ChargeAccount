            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignBottom="@id/account_kb_dot"
            android:background="@color/skin_color_numkeyboard_divider"/>

        <TextView
            android:id="@+id/account_kb_0"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:background="@drawable/skin_bg_view_selector"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/skin_color_text_primary"
            android:textSize="22.0dip"
            app:layout_heightPercent="25.0%"
            app:layout_widthPercent="25.0%"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/account_kb_1"
            android:layout_toEndOf="@+id/account_kb_1"/>
