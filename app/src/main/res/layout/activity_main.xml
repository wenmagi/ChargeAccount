<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.wen.magi.baseframe.views.viewpager.TabView
        android:id="@+id/id_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_tv_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        app:image_text_margin="2dp"
        app:item_padding="7dp"
        app:text_normal_color="@color/text_color_gray_66"
        app:text_select_color="@color/orange"
        app:text_size="@dimen/text_size_minimal" />


    <com.wen.magi.baseframe.views.viewpager.MainViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/id_tab"
        android:layout_alignParentTop="true"
        android:background="@color/white" />
</RelativeLayout>
