<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Rotate3dAnimation">
        <attr name="rollType" format="enum">
            <enum name="x" value="0" />
            <enum name="y" value="1" />
            <enum name="z" value="2" />
        </attr>
        <attr name="fromDeg" format="float" />
        <attr name="toDeg" format="float" />
        <attr name="pivotX" format="fraction" />
        <attr name="pivotY" format="fraction" />
    </declare-styleable>

    <declare-styleable name="RectTextView">
        <attr name="bitmap_src" format="reference" />
        <attr name="bitmap_width" format="reference|dimension" />
        <attr name="bitmap_height" format="reference|dimension" />
        <attr name="bitmap_marginLeft" format="reference|dimension" />
        <attr name="bitmap_margintTop" format="dimension|reference" />

        <attr name="text_margin" format="dimension|reference" />
        <attr name="right_top_text" format="reference|string" />
        <attr name="right_top_text_size" format="reference|dimension" />
        <attr name="right_top_text_color" format="reference|color" />

        <attr name="right_bottom_text" format="reference|string" />
        <attr name="right_bottom_text_size" format="reference|dimension" />
        <attr name="right_bottom_text_color" format="reference|color" />
        <attr name="right_bottom_text_marginTop" format="dimension|reference" />
    </declare-styleable>
    <declare-styleable name="Leans45DegreeView">
        <attr name="leans_height" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="TabView">
        <attr name="text_size" format="dimension|reference"></attr>
        <attr name="text_select_color" format="reference|color"></attr>
        <attr name="text_normal_color" format="reference|color"></attr>
        <attr name="item_padding" format="dimension|reference"></attr>
        <attr name="image_text_margin" format="dimension|reference"></attr>
    </declare-styleable>


    <declare-styleable name="PtrFrameLayout">
        <!-- Optional. If you put header and content in xml, you can you these to specify them. -->
        <attr name="ptr_header" format="reference" />
        <attr name="ptr_content" format="reference" />

        <!-- the resistance when you are moving the frame -->
        <attr name="ptr_resistance" format="float" />

        <!-- the ration of the height of the header to trigger refresh -->
        <attr name="ptr_ratio_of_header_height_to_refresh" format="float" />

        <attr name="ptr_duration_to_close" format="integer" />
        <attr name="ptr_duration_to_close_header" format="integer" />

        <!-- pull to refresh, otherwise release to refresh, default is release to refresh -->
        <attr name="ptr_pull_to_fresh" format="boolean" />

        <!-- keep header when refreshing-->
        <attr name="ptr_keep_header_when_refresh" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PtrClassicHeader">
        <attr name="ptr_rotate_ani_time" format="integer" />
    </declare-styleable>
</resources>